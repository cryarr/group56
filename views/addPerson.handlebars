<h1 class="mt-5">Add person</h1>
<h5 class="mt-5">Add your person</h3>
		
<form action="/addPerson" method="post">
	ID: <input type="text" name="id"><br>
	Name: <input type="text" name="name"><br>
	Description: <input type="text" height="20px" name="desc"><br>
	Event ID: <input type="text" name="pid"><br>
	Region ID: <input type="text" name="rid"><br>
	Time periodID: <input type="text" name="time"><br>
	<input type="submit" value="submit"/>
</form>
<br><br><br><br><br>

<h3>List of People</h3>

<table>
	<thead>
		<tr>
			<th>Id</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Region</th>
			<th>City</th>
			<th>Description</th>
			<th>Remove/Update</th>
		</tr>
	</thead>
	<tbody>
		{{#each people}}
			<tr>
				<td>{{id}}</td>
				<td>{{first_name}}</td>
				<td>{{last_name}}</td>
				<td>{{regid}}</td>
				<td>{{citid}}</td>
				<td>{{description}}</td>
				<td><button type="button" id="removeId1">Remove</button>
				<button type="button" id="updateId2">Update</button></td>
			</tr>
		{{/each}}
	</tbody>

</table>
