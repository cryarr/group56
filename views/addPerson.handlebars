<h1 class="mt-5">Add person</h1>
<h5 class="mt-5">Add your person</h3>
		
<form action="/addPerson" method="post">
	First Name: <input type="text" name="fname"><br>
	Last Name: <input type="text" name="lname"><br>
	Region: <select name="regid">
		{{#each region}}
			<option value="{{id}}">{{region_name}}</option>
		{{/each}}
	</select><br>
	City: <select name="citid">
		{{#each city}}
			<option value="{{id}}">{{city_name}}</option>
		{{/each}}
	</select><br>
	Description: <input type="text" height="20px" name="desc"><br>
	<input type="submit" value="submit"/>
</form>
<br><br><br><br><br>

<h3>List of People</h3>

<table>
	<thead>
		<tr>
			<th>Id</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Region</th>
			<th>City</th>
			<th>Description</th>
			<th>Remove/Update</th>
		</tr>
	</thead>
	<tbody>
		{{#each people}}
			<tr>
				<td>{{id}}</td>
				<td>{{first_name}}</td>
				<td>{{last_name}}</td>
				<td>{{regid}}</td>
				<td>{{citid}}</td>
				<td>{{description}}</td>
				<td><button type="button" onclick="deletePerson({{id}})">Remove</button>
				<a href="/person/{{id}}">Update</a></td>
			</tr>
		{{/each}}
	</tbody>

</table>
